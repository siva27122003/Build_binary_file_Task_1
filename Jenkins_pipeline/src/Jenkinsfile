 pipeline {
    agent any

    environment {
        GOROOT = "/usr/local/go"
        PATH = "${GOROOT}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/siva27122003/Build_binary_file_Task_1.git'
            }
        }

        stage('Build') {
            steps {
                sh 'go build -o main main.go'
            }
        }

        stage('Test') {
            steps {
                sh 'go test -v'
            }
        }
    }
}
